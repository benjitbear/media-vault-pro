{
  "output": {
    "base_directory": "/Users/poppemacmini/Media",
    "format": "mp4",
    "video_encoder": "x264",
    "quality": 22,
    "audio_encoder": "aac",
    "audio_bitrate": "192"
  },
  "metadata": {
    "save_to_json": true,
    "extract_chapters": true,
    "extract_subtitles": true,
    "extract_audio_tracks": true,
    "fetch_online_metadata": true
  },
  "automation": {
    "auto_detect_disc": true,
    "auto_eject_after_rip": true,
    "notification_enabled": false
  },
  "web_server": {
    "enabled": true,
    "port": 8096,
    "host": "0.0.0.0",
    "library_name": "My Media Library"
  },
  "disc_detection": {
    "check_interval_seconds": 5,
    "mount_path": "/Volumes"
  },
  "handbrake": {
    "preset": "Fast 1080p30",
    "additional_options": []
  },
  "auth": {
    "enabled": true,
    "session_hours": 24,
    "default_users": [
      {"username": "admin", "password": "Intmain(9)", "role": "admin"},
      {"username": "ben", "password": "Intmain(9)", "role": "user"}
    ]
  },
  "library_cache": {
    "ttl_seconds": 300
  },
  "logging": {
    "debug": false,
    "progress_indicator": false
  },
  "jellyfin": {
    "enabled": false,
    "library_path": "",
    "api_url": "",
    "api_key": ""
  },
  "uploads": {
    "enabled": true,
    "max_upload_size_mb": 4096,
    "upload_directory": "/Users/poppemacmini/Media/uploads"
  },
  "podcasts": {
    "enabled": true,
    "check_interval_hours": 6,
    "auto_download": true,
    "download_directory": "/Users/poppemacmini/Media/podcasts",
    "max_episodes_per_feed": 50
  },
  "downloads": {
    "enabled": true,
    "download_directory": "/Users/poppemacmini/Media/downloads",
    "ytdlp_format": "bestvideo[height<=1080]+bestaudio/best",
    "articles_directory": "/Users/poppemacmini/Media/articles",
    "books_directory": "/Users/poppemacmini/Media/books"
  },
  "file_naming": {
    "video_template": "{title} ({year})",
    "audio_template": "{artist}/{album} ({year})/{track:02d} - {title}",
    "rename_after_rip": true
  }
}
